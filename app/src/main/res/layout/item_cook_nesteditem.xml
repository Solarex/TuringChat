<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/item_cook_tv_text"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/item_cook_iv_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="#ff0000"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/item_cook_iv_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_cook_tv_name"
            android:layout_width="wrap_content"
            tools:text="鱼香肉丝"
            android:gravity="center"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_cook_tv_info"
            android:layout_width="wrap_content"
            tools:text="猪肉、鱼香肉丝调料 | 香菇、木耳、红萝卜、黄酒、玉米淀粉、盐"
            android:gravity="center"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>